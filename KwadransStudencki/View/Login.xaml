<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KwadransStudencki.View.Login">
    <StackLayout BackgroundColor="{StaticResource bckColor}" Padding="40,0">
        <StackLayout>
            <Label Text="Zaloguj się"
                   TextColor="{StaticResource txtColor}"
                   FontSize="32"
                   Padding="0,60,0,60"
                   HorizontalOptions="CenterAndExpand"
                   />
            <Entry
                 Placeholder="Login"
                 FontSize="24"
                 ClearButtonVisibility="WhileEditing" 
                 TextColor="#F2F2F0"
                 x:Name="loginEntry"
                 PlaceholderColor="{StaticResource txtColor}"
                 />
            <Entry  
                 Placeholder="Hasło"
                 FontSize="24"
                 IsPassword="True"
                 ClearButtonVisibility="WhileEditing" 
                 TextColor="#F2F2F0"
                 x:Name="passwordEntry"
                PlaceholderColor="{StaticResource txtColor}"
                 />
            
            <StackLayout Orientation="Horizontal" Padding="0,20">
                <Button Text="Zaloguj"
                        TextColor="{StaticResource txtColor}"   
                        BackgroundColor="{StaticResource fieldColor}"
                        HorizontalOptions="FillAndExpand"
                        CornerRadius="{StaticResource borderRadius}"
                        Clicked="LogInButton_Clicked"/>

            </StackLayout>

        </StackLayout>
    </StackLayout>
